/* pages/searchPatent/searchPatent.wxss */
page{
  background: #fff;
}
.header {
  height: 30px;
  display: flex;
  align-items: center;
  padding-left: 10px;
  padding-top: 5px;
  padding-right: 10px;
  background: white;
   padding-bottom: 5px;
}

.search {
  display: flex;
  align-items: center;
  padding-left: 5px;
  padding-right: 5px;
  background: white;
  font-size: 14px;
  background-color: #f2f2f2;
  height: 100%;
  color: #666;
  flex: 1;
  border-radius: 4px;
}


.itemView {
  background: white;
  align-items: center;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 5px;
  padding-top: 5px;
  background: white;
  height: 60px;
}

.image {
  width: 50px;
  height: 50px;
  min-width: 50px;
  display: flex;
}


.caseH1{
  color: #f30f30;
  font-size: 18px;
  padding: 15px 20px;
  font-weight: bold;
}
.caseH2{
  color: #f30f30;
  font-size: 14px;
  padding: 0 20px;
  margin-bottom: 10px;
}
.caseContent .caseImg{
  width: 25px;
  margin-left: 5px;
}
.caseContent .caseLeft{
  width: 10%;
  float: left;
  position: relative
}
.caseContent .line{
  height: 45px;
  width: 1px;
  background: #eee;
  margin-left: 16px;
  float: left;
  top:25px;
  position: absolute;
}
.caseContent .caseText{
  float: left;
   width: 90%;
  font-size: 14px;
  color: #fe6246;
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis; /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
  height: 60px;
  border-bottom: 1px solid #ccc;
}
.caseContent .caseText.false{
  border: none;
}
.caseContent .createTime{
  margin-top: 10px
}
.imageBgView{
  width: 100%;
  height: 100%;
  text-align: center;
  margin-top: 30%
}
.imageBgView image{
  width:150px;
}
.imageBgView view{
  color: #fe6246;
  font-size: 16px;
}
