/* pages/submitOrder/submitOrder.wxss */

.lineBgView {
  width: 100%;
  height: 44px;
  background-color: white;
  display: flex;
  line-height: 44px;
  flex-direction: row;
}

.titleView {
  width: 25%;
  height: 44px;
  /* background-color: red; */
  font-size: 13px;
  line-height: 44px;
  padding-left: 10px;
  color: #666;
}

.lineBgView input {
  width: 100%;
  height: 44px;
  /* background-color: yellow; */
  font-size: 12px;
  text-align: right;
  padding-right: 10px;
}

.lineBase {
  width: 100%;
  height: 5px;
  background-color: #f2f2f2;
}

.messageView {
  font-size: 12px;
  text-align: left;
  padding-left: 10px;
  line-height: 25px;
  width: 100%;
  height: 25px;
}

.messgaeBgView {
  text-align: left;
  padding: 10px;
  line-height: 80px;
  width: 100%;
  font-size: 12px;
  background-color: white;
  height: 80px;
}

.bottomBtnView {
  width: 100%;
  height: 44px;
  background-color: #fe6246;
  position: fixed;
  bottom: 0;
  left: 0;
  color: white;
  text-align: center;
  line-height: 44px;
}

.domainItem {
  font-size: 12px;
  width: 260px;
  height: 45px;
  /* background-color: red; */
  margin-left: 10px;
  text-align: right;
  line-height: 45pxpx;
  padding-right: 10px;
  color: #666;
}
