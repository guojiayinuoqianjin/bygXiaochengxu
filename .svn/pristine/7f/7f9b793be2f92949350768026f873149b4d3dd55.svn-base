/* pages/policy/policy.wxss */

/* 头部背景图 */
.scrollView{
  height: 100%;
}
.header {
  height: 74px;
  background-color: white;
  padding-top: 5px;
  box-sizing: border-box;
}

.subView {
  width: 92%;
  height: 34px;
  border-radius: 4px;
  background-color: white;
  margin: auto;
  line-height: 34px;
  overflow: hidden;
  color: white;
  display: flex;
}

.typeView {
  height: 100%;
  flex: 0 0 40px;
  line-height: 34px;
  text-align: center;
  font-size: 14px;
  padding: 0;
  background-color: #fe6246;
  float: left;
}

.search {
  background-color: #f2f2f2;
  height: 100%;
  float: right;
  color: #666;
  display: block;
  /*弹性缩放  */
  flex: 1;
  font-size: 14px;
  /* font-family: "黑体"; */
}

.totalLab {
  width: 60%;
  /* background-color: orange; */
  height: 35px;
  line-height: 35px;
  margin-left: 4%;
  font-size: 14px;
  color: #666;
  float: left;
}

.sortIcon {
  width: 17.5px;
  height: 16.5px;
  float: right;
  /* background-color: yellow; */
  margin-top: 9px;
}

.timeBg {
  float: right;
  width: 75.5px;
  height: 35px;
  margin-right: 4%;
}

.timeSort {
  width: 58px;
  float: left;
  height: 35px;
  line-height: 35px;
  font-size: 14px;
  color: #666;
  /* background-color: orange; */
}

.itemView {
  height: 90px;
  background-color: white;
  border-top: 1px solid #e8e8e8;
}

.titleView {
  display: -webkit-box;
  width: 92%;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 14px;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* background-color: yellow; */
  height: 50px;
  margin: auto;
  margin-top: 10px;
  color: #333;
}

.addrView {
  
  float: left;
  margin-left: 4%;
  /* background-color: red; */
}

.timeView {
  float: right;
  margin-right: 4%;
  /* background-color: green; */
  text-align: right;
}

.subtext {
  width: 46%;
  height: 30px;
  color: #999;
  
  font-size: 12px;
  line-height: 30px;
}
