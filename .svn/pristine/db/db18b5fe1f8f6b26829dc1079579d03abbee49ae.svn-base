/* pages/handlePatent/handlePatent.wxss */
.imageBgView{
  width: 100%;
  height: 130px;
  background: red;
  display: flex;
  justify-content: center; 
  align-items: center;
}

.image{
  width: 300px;
  height: 110px;
}
.infoBgView{
  width: 100%;
  height: 110px;
  background-color: yellowgreen;
  margin-top: 10px;
}
.title{
  padding-top: 10px;
  padding-left: 10px;
  color: #666;
  font-size: 15px;
}
.info{
  padding-left: 10px;
  color: #666;
  padding-top: 5px;
  font-size: 12px;
}
.info span{
  color: #fe6246;
}
.typeBgView{
  width: 100%;
  height: 40px;
  margin-top: 10px;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.typeTitle{
  padding-left: 10px;
  color: #666;
  font-size: 12px;
}
.typeItem{
  font-size: 12px;
  width: 80px;
  height: 25px;
  /* background-color: red; */
  margin-left: 10px;
  line-height: 25px;
  text-align:center;
  
}
.selTypeItem{
  border: 1px dashed #fe6246;
  color: #fe6246;
}
.normalTypeItem{
  border: 1px dashed #ccc;
  color: #666;
}
.domainItem{
  font-size: 12px;
  width: 260px;
  height: 25px;
  /* background-color: red; */
  margin-left: 10px;
  line-height: 25px;
  padding-left: 3px;
  border: 1px dashed #ccc;
  color: #666;
}
.bottomImage{
  width: 100%;
  margin-top: 20px;
  margin-bottom: 44px;
}
.bottomBtnView{
  width: 100%;
  height: 44px;
  background-color: #fe6246;
  position: fixed;
  bottom: 0;
  left: 0;
  color: white;
  text-align: center;
  line-height: 44px;

}
