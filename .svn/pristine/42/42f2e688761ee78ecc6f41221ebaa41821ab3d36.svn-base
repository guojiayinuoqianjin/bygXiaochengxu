/* pages/searchPatent/searchPatent.wxss */

.header {
  background-color: white;
  padding-top: 5px;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 5px;
  display: flex;
}

.searchtype {
  background-color: #fe6246;
  height: 34px;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  width: 40px;
  align-items: center;
  justify-content: center;
  color: white;
  display: flex;
  font-size: 14px;
}

.searchinput {
  background-color: #f2f2f2;
  height: 34px;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  width: 100%;
  align-items: flex-start;
  justify-content: center;
  display: flex;
  padding-left: 5px;
  color: #666;
  font-size: 14px;
}

.searchinfo {
  background-color: white;
  padding-left: 10px;
  padding-right: 10px;
  display: flex;
}

.searchnumber {
  height: 34px;
  font-size: 12px;
  color: #999;
  width: 100%;
  display: flex;
  align-items: center;
}

.searchdate {
  height: 34px;
  font-size: 12px;
  width: 80px;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.searchicon {
  width: 17.5px;
  height: 16.5px;
}

.searchiconview {
  align-items: center;
  display: flex;
}

.item-title {
  background-color: white;
  color: #666;
  display: flex;
  width: 100%;
  text-align: left;
  padding-top: 5px;
  padding-left: 10px;
  padding-right: 10px;
}

.item-address-view {
  background-color: white;
  display: flex;
  padding-left: 10px;
  padding-bottom: 10px;
  padding-right: 10px;
  align-items: center;
}

.item-address {
  color: #666;
  display: flex;
  align-items: center;
  width: 90%;
  padding-top: 5px;
  font-size: 12px;
}

.item-time {
  color: #666;
  width: 120px;
  display: flex;
  justify-content: flex-end;
  font-size: 12px;
}

.item-line {
  background-color: #f2f2f2;
  height: 5px;
  width: 100%;
}

.item-top-line {
  background-color: #f2f2f2;
  height: 1px;
  width: 100%;
}
