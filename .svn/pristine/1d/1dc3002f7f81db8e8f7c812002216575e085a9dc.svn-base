<!--pages/policy/policy.wxml-->
<view>
  <view class='header'>
      <view class='subView'>
        <view class='typeView'>标题</view>
        <input class='search' value='情书屎壳郎发你啦发个' confirm-type="search"></input>
      </view>
      <view class='totalLab'>共检索到xxx条结果</view>
      <view class='timeBg' bindtap='softClick'>
        <view class='timeSort'>时间排序</view>
        <image class='sortIcon' src='/image/icon/timeUp.png'></image>
      </view>
    </view>
    <block wx:for="{{dataList}}" wx:for-item="item" wx:key="key">
      <view class="itemView">
        <view class='titleView '>"{{item.title}}"</view>
        <view class='addrView subtext'>北京市科委</view>
        <view class='timeView subtext'>2017-09-09</view>
      </view>
    </block>
</view>