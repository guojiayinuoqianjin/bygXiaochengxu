/* pages/sendOrder/sendOrder.wxss */
page{
  background-color: white;
}
.imageBgView {
  width: 100%;
  height: 130px;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
}

.image {
  width: 300px;
  height: 110px;
}

.bottomBg {
  width: 100%;
   height: 100%; 
  min-height: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.leftBg {
  width: 20%;
  min-height: 100%;
  height: 100%;
  background-color: red;
}

.centerBg {
  width: 40%;
  min-height: 100%;
  background-color: chartreuse;
}

.rightBg {
  width: 40%;
  min-height: 100%;
  background-color: yellowgreen;
}
.bottomBtnView {
  width: 100%;
  height: 44px;
  background-color: #fe6246;
  position: fixed;
  bottom: 0;
  left: 0;
  color: white;
  text-align: center;
  line-height: 44px;
}